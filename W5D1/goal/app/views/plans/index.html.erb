




<% current_user.plans.each do |plan| %>
<ul>
  <li>
    <%= plan.body %>
    <%= button_to "Remove Plan", plan_url(plan) ,method: :delete %>

    <% plan.comments.try(:each) do |comment| %>
    <ul>
        <li><%= comment.body %></li>
    </ul>

    <% end  %>


    <form class="" action="<%= plan_comments_url(plan) %>" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <label> Comment <input type="text" name="comment[body]" value=""></label>

      <input type="submit" name="" value="Add comment">
    </form>

  </li>

</ul>

<% end %>
